<% posts.forEach(function(post){ %>
<%  var content = post.content; %>
<%  var truncatedContent = content.substring(0, 100); %>
<h1> <%= post.title %> </h1>
<p>
  <%= truncatedContent + "..." %>
  <a href="/posts/<%= post.title %>">Read More</a>
</p>
<% }); %>

